{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
         <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
	  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
	    <button type="button" class="close" data-dismiss="alert">&times;</button>
	  </div>
	  {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-mode">{{ entry_test }}</label>
            <div class="col-sm-10">
              <select name="payment_cardlink_mode" id="input-mode" class="form-control">
 				        {% if payment_cardlink_mode == 'test' %}
                <option value="test" selected="selected">{{ text_test }}</option>
                {% else %}
                <option value="test">{{ text_test }}</option>
                {% endif %}
                {% if payment_cardlink_mode == 'live' %}
                <option value="live" selected="selected">{{ text_live }}</option>
                {% else %}
                <option value="live">{{ text_live }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-acquirer">{{ entry_acquirer }}</label>
            <div class="col-sm-10">
              <select name="payment_cardlink_acquirer" id="input-acquirer" class="form-control">
 				        {% if payment_cardlink_acquirer == 0 %}
                <option value="0" selected="selected">Cardlink</option>
                {% else %}
                <option value="0">Cardlink</option>
                {% endif %}
                {% if payment_cardlink_acquirer == 1 %}
                <option value="1" selected="selected">Nexi</option>
                {% else %}
                <option value="1">Nexi</option>
                {% endif %}
                {% if payment_cardlink_acquirer == 2 %}
                <option value="2" selected="selected">Worldline</option>
                {% else %}
                <option value="2">Worldline</option>
                {% endif %}
              </select>
            </div>
          </div>
          
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-merchantid">{{ entry_merchantid }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_cardlink_merchantid" value="{{ payment_cardlink_merchantid }}" id="input-merchantid" class="form-control" />
			        {% if error_merchantid %}
              <div class="text-danger">{{ error_merchantid }}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-merchantpass">{{ entry_merchantpass }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_cardlink_merchantpass" value="{{ payment_cardlink_merchantpass }}" id="input-merchantpass" class="form-control" />
			        {% if error_merchantpass %}
              <div class="text-danger">{{ error_merchantpass }}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-title">{{ entry_title }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_cardlink_title" value="{{ payment_cardlink_title }}" id="input-title" class="form-control" />
			        {% if error_title %}
              <div class="text-danger">{{ error_title }}</div>
              {% endif %}
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-instalments"><span data-toggle="tooltip" title="{{ text_instalments }}">{{ entry_instalments }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_cardlink_instalments" value="{{ payment_cardlink_instalments }}" id="input-instalments" class="form-control" />
              <small class="text-muted">{{ text_instalments }}</small>
            </div>
          </div> 

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-trtype">{{ entry_trtype }}</label>
            <div class="col-sm-10">
              <select name="payment_cardlink_trtype" id="input-trtype" class="form-control">
 				        {% if payment_cardlink_trtype == '1' %}
                <option value="1" selected="selected">{{ text_capture }}</option>
                {% else %}
                <option value="1">{{ text_capture }}</option>
                {% endif %}
                {% if payment_cardlink_trtype == '2' %}
                <option value="2" selected="selected">{{ text_authorize }}</option>
                {% else %}
                <option value="2">{{ text_authorize }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-tokenization">{{ entry_tokenization }}</label>
            <div class="col-sm-10">
              <select name="payment_cardlink_tokenization" id="input-tokenization" class="form-control">
 				        {% if payment_cardlink_tokenization == '1' %}
                <option value="1" selected="selected">{{ text_enable }}</option>
                {% else %}
                <option value="1">{{ text_enable }}</option>
                {% endif %}
                {% if payment_cardlink_tokenization == '0' %}
                <option value="0" selected="selected">{{ text_disable }}</option>
                {% else %}
                <option value="0">{{ text_disable }}</option>
                {% endif %}
              </select>
              <small class="text-muted">{{ text_tokenization_note }}</small>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-iframe">{{ entry_iframe }}</label>
            <div class="col-sm-10">
              <select name="payment_cardlink_iframe" id="input-iframe" class="form-control">
 				        {% if payment_cardlink_iframe == '0' %}
                <option value="0" selected="selected">{{ text_redirection }}</option>
                {% else %}
                <option value="0">{{ text_redirection }}</option>
                {% endif %}
                {% if payment_cardlink_iframe == '1' %}
                <option value="1" selected="selected">{{ text_iframe }}</option>
                {% else %}
                <option value="1">{{ text_iframe }}</option>
                {% endif %}
              </select>
              <small class="text-muted">{{ text_iframe_note }}</small>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_cardlink_order_status" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status['order_status_id'] == payment_cardlink_order_status %}
                <option value="{{ order_status['order_status_id'] }}" selected="selected">{{ order_status['name'] }}</option>
                {% else %}
                <option value="{{ order_status['order_status_id'] }}">{{ order_status['name'] }}</option>
                {% endif %}
                {% endfor %}
              </select>
              <small class="text-muted">{{ text_order_status_note }}</small>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-css"><span data-toggle="tooltip" title="{{ text_url_css }}">{{ entry_url_css }}</span></label>
            <div class="col-sm-10">
              <textarea name="payment_cardlink_url_css" cols="40" rows="1" id="input-css" class="form-control">{{ payment_cardlink_url_css }}</textarea>
            </div>
          </div> 

          <input type="hidden" name="payment_cardlink_url_success" id="input-success" value="{{ payment_cardlink_url_success }}"></input>
          <input type="hidden" name="payment_cardlink_url_fail" id="input-fail" value="{{ payment_cardlink_url_fail }}"></input>
          
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_cardlink_status" id="input-status" class="form-control">
              {% if payment_cardlink_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
              {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
              {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group">
		        <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_cardlink_sort_order" value="{{ payment_cardlink_sort_order }}" id="input-sort-order" class="form-control"/>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}